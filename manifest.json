{
  "name": "Linkly",
  "version": "1.2",
  "description": "Making any link a tracking link",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
            "128": "icon128.png" },
  "permissions": ["tabs"],
  "browser_action": {
    "default_title": "Create Linkly Link",
    "default_icon": "icon16.png"
  },
  "externally_connectable": {
    "matches": ["https://*.linklyhq.com/*"]
  }
}
